{
  "name": "php-temporal/php-temporal",
  "description": "A port of the JavaScript Temporal API for PHP",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.4"
  },
  "require-dev": {
    "carthage-software/mago": "^1.9.1",
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "Temporal\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Temporal\\Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "carthage-software/mago": true
    }
  },
  "minimum-stability": "stable",
  "scripts": {
    "test": "./vendor/bin/phpunit --testsuite Temporal",
    "test262:run": "./vendor/bin/phpunit --testsuite test262",
    "test262:update": "node tools/extract-test262.mjs && ./vendor/bin/phpunit --testsuite test262"
  }
}
